<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ravneet.ieeedtu.activities.LargePublicNotification">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:background="@color/Blue700"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:padding="2dp"
            android:id="@+id/tv_notificationTitle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="23dp"
            android:gravity="right"
            android:background="@color/Blue500"
            android:textColor="@android:color/white"
            android:padding="2dp"
            android:id="@+id/tv_notificationDate"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Body"
            android:padding="2dp"
            android:background="@color/Blue300"
            android:textColor="@android:color/white"
            android:textSize="19dp"
            android:id="@+id/tv_notificationBody"/>



    </LinearLayout>



</ScrollView>
