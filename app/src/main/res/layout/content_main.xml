<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ravneet.ieeedtu.activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainactivity_linerlayout"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"
            android:text="ABOUT IEEE DTU"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_margin="10dp"
            android:textColor="@android:color/black"
            android:text="IEEE DTU, the oldest student branch in Delhi Section of the Asia Pacific Region is devoted to its aim of instilling scientific temperament in the student community through a plethora of activities around the year. It boasts of the largest number of student members in Delhi Section."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Awards"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_margin="10dp"
            android:textColor="@android:color/black"
            android:text="The Darrel Chong Student Activity Award 2013, 2014 and 2015.
Most Innovative Student Branch and Award 2012"/>

    </LinearLayout>

    <com.joaquimley.faboptions.FabOptions
        android:id="@+id/fab_options"
        android:layout_width="70dp"
        android:layout_height="100dp"
        app:background_color="@color/colorAccent"
        app:fab_color="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
